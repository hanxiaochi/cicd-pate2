%h2 管理员页面
%form(action="/admin/users" method="post")
  %input(type="text" name="username" placeholder="用户名")
  %input(type="password" name="password" placeholder="密码")
  %select(name="role")
    %option(value="user") 普通用户
    %option(value="admin") 管理员
  %button 添加用户
%table
  %thead
    %tr
      %th 用户名
      %th 角色
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.role